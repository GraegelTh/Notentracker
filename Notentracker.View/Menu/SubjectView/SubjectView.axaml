<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Notentracker.View.Menu.SubjectView.SubjectView">

    <StackPanel Margin="20" Spacing="15">
        <TextBlock Text="📚 Fächerverwaltung" FontSize="22" FontWeight="Bold" Foreground="White"/>

        <StackPanel Orientation="Horizontal" Spacing="10">
            <TextBox x:Name="SubjectInput" Width="250" Watermark="Neues Fach..." />
            <Button Content="➕ Hinzufügen" Click="OnAddClick"/>
            <Button Content="✏️ Bearbeiten" Click="OnEditClick"/>
            <Button Content="💾 Anwenden" Click="OnApplyClick"/>
            <Button Content="🗑️ Löschen" Background="#922" Foreground="White" Click="OnDeleteClick"/>
        </StackPanel>

        <ListBox x:Name="SubjectList"
                 ItemsSource="{Binding Subjects}"
                 SelectedItem="{Binding SelectedSubject, Mode=TwoWay}"
                 BorderThickness="0"
                 Background="Transparent"
                 Height="500">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Background="#333" Padding="8" Margin="2" CornerRadius="6">
                        <TextBlock Text="{Binding Name}" Foreground="White" FontSize="16"/>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>

</UserControl>